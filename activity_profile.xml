<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF688"
    tools:context=".Profile">

    <ImageView
        android:layout_width="159dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="fitXY"
        android:src="@drawable/epus" />

    <TextView
        android:layout_width="324dp"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Epus (Elektronik perpustakaan) merupakan aplikasi perpustakaan yang dapat mempermudah dalam mencari sumber bacaan yaitu berupa buku dan jurnal."
        android:textSize="15sp" />

</RelativeLayout>