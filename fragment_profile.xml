<!-- fragment_edit_name.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/colorAccent"
        android:scaleType="fitXY"
        android:src="@drawable/epus" />

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="296dp"
        android:layout_height="85dp"
        android:layout_marginTop="100dp"
        android:text="Epus (Elektronik perpustakaan) merupakan aplikasi perpustakaan yang dapat mempermudah dalam mencari sumber bacaan yaitu berupa buku dan jurnal."
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Dismiss" />

</RelativeLayout>